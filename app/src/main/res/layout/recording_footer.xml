<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140px"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    tools:showIn="@layout/activity_recording">

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_gravity="left"
        android:layout_marginLeft="80px"
        android:layout_marginTop="25px"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/pause_icon"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_gravity="left"
        android:layout_marginLeft="350px"
        android:layout_marginTop="25px"
        android:src="@drawable/ic_pause" />

    <ImageView
        android:id="@+id/record_icon"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:src="@drawable/record" />


    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="350px"
        android:layout_marginTop="25px"
        android:src="@drawable/ic_play" />


    <ImageView
        android:id="@+id/upload_icon"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80px"
        android:layout_marginTop="25px"
        android:src="@drawable/ic_upload" />


    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/record_icon"
        android:layout_alignEnd="@+id/record_icon"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/record_icon"
        android:layout_marginTop="15px"
        android:background="@drawable/check"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textOff=""
        android:textOn="" />


</RelativeLayout>


    